<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/nk"
    tools:context="com.example.navendu.rbstrack.fragments.addemployee">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

    <EditText
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:id="@+id/racf"
       android:hint="racf"
        android:textColor="#ffffff"

        android:textColorHint="#ffffff"
        android:textStyle="italic"
        />



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <EditText
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:id="@+id/name"

            android:textColorHint="#ffffff"
            android:hint="name"
            android:textColor="#ffffff"
            android:textStyle="italic"
            />



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <EditText
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"

            android:textColorHint="#ffffff"
            android:id="@+id/phoneno"
            android:hint="phoneno"
            android:textColor="#ffffff"
            android:textStyle="italic"
            />



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <EditText
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:inputType="textPassword"

            android:textColorHint="#ffffff"
            android:id="@+id/password"
            android:hint="password"
            android:textColor="#ffffff"
            android:textStyle="italic"
            />



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <EditText
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:id="@+id/leaves"

            android:textColorHint="#ffffff"
            android:hint="leaves"
            android:textColor="#ffffff"
            android:textStyle="italic"
            />



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <EditText
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:id="@+id/contacts"

            android:textColorHint="#ffffff"
            android:hint="ContactsNo"
            android:textColor="#ffffff"
            android:textStyle="italic"
            />



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <EditText
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:id="@+id/contactnames"
            android:hint="Contactnames"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textStyle="italic"
            />



    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <Button
            android:id="@+id/pp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"

            android:layout_centerVertical="true"
            android:background="@color/colorPrimaryDark"
            android:text="add employee"
            android:textAllCaps="true"
            android:textColorHighlight="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="italic" />

    </RelativeLayout>







</LinearLayout>
